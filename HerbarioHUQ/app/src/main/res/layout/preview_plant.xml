<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_centerInParent="true"
    card_view:cardElevation="8dp"
    android:layout_margin="@dimen/margen_card_view">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen_planta"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/img_planta"
            android:src="@drawable/imagen_pepinillo_diablo" />

        <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="Pepinillo del diablo"
            android:textSize="10pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genero"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad fotos"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planta venenosa"
                android:textColor="@color/colorTextGray"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ecballium"
                android:textColor="@color/colorTextGray"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 fotos"
                android:textColor="@color/colorTextGray"
                android:textStyle="italic" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <ImageView
            android:id="@+id/acept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:visibility="invisible"
            card_view:srcCompat="@drawable/acept" />
    </LinearLayout>


</android.support.v7.widget.CardView>